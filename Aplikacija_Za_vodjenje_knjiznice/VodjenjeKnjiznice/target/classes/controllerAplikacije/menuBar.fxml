<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerAplikacije.MenuController">

    <MenuBar prefHeight="50.0" prefWidth="700.0" style="-fx-background-color: lightBlue;" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.valignment="TOP">
        <menus>
            <Menu mnemonicParsing="false" style="-fx-padding: 4px 45px 0px 55px;" text="Start">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showHelloScreen" style="-fx-padding: 0px 30px;" text="Back To Start" />
                </items></Menu>
            <Menu mnemonicParsing="false" style="-fx-padding: 4px 45px;" text="Books">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showBookSearchScreen" style="-fx-padding: 0px 45px;" text="Search" />
                    <MenuItem mnemonicParsing="false" onAction="#showAddBookScreen" style="-fx-padding: 0px 45px;" text="add new book" />
                    <MenuItem mnemonicParsing="false" onAction="#showDeleteBookScreen" style="-fx-padding: 0px 45px;" text="delete book" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" style="-fx-padding: 4px 45px;" text="Authors">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showAuthorSearchScreen" style="-fx-padding: 0px 37px;" text="Search" />
                    <MenuItem mnemonicParsing="false" onAction="#showAddAuthorScreen" style="-fx-padding: 0px 37px;" text="add new Author" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" style="-fx-padding: 4px 45px;" text="Department">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showOdjelSearchScreen" style="-fx-padding: 0px 37px;" text="Search" />
                    <MenuItem mnemonicParsing="false" onAction="#showAddOdjelScreen" style="-fx-padding: 0px 37px;" text="add new Department" />
                </items>
            </Menu>
         <Menu mnemonicParsing="false" style="-fx-padding: 4px 45px;" text="Changes">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#showChangeSearchScreen" style="-fx-padding: 0px 37px;" text="changes" />
            </items>
         </Menu>
        </menus>
        <GridPane.margin>
            <Insets />
        </GridPane.margin>
        <padding>
            <Insets top="10.0" />
        </padding>
        <opaqueInsets>
            <Insets top="10.0" />
        </opaqueInsets>
      <effect>
         <Blend />
      </effect>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
    </MenuBar>
</AnchorPane>
